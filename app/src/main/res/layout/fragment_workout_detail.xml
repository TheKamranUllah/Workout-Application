<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/detailbg"
    tools:context=".WorkoutDetailFragment">
  <include
      android:id="@+id/detail_toolbar"
      layout="@layout/toolbar"/>

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The name will appear here"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:padding="2dp"
        android:textColor="@android:color/black"
        android:background="@drawable/layout_round"
        android:id="@+id/text_title"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="The description will appear here"
        android:gravity="bottom"
        android:padding="5dp"
        android:layout_marginLeft="5dp"
        android:typeface="normal"
        android:textSize="18sp"
        android:background="@drawable/layout_round_green"
        android:textColor="@android:color/black"
        android:id="@+id/description"/>

    <FrameLayout
        android:id="@+id/stop_watch_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>